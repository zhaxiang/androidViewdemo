<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.fragment.SlidingPaneLayout.SlidingPaneLayoutFragment"
    android:id="@+id/slidingPaneLayout">

    <fragment
        android:id="@+id/leftFragment"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:name="com.example.administrator.fragment.SlidingPaneLayout.SlidingLeftFragment"
        ></fragment>

    <fragment
        android:id="@+id/rightFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.example.administrator.fragment.SlidingPaneLayout.SlidingRightFragment"
        ></fragment>

</android.support.v4.widget.SlidingPaneLayout>
