<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.amap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </com.amap.api.maps.MapView>
    <RadioGroup
        android:id="@+id/dingweiType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/normalRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/normal_type"/>
        <RadioButton
            android:id="@+id/satelliteRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/satellite_type"/>
        <RadioButton
            android:id="@+id/rotateRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rotate_type"/>
    </RadioGroup>
    <RadioGroup
        android:id="@+id/mapType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dingweiType"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/shilianglRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/model_shiliang"/>
        <RadioButton
            android:id="@+id/weixingRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/model_weixing"/>
        <RadioButton
            android:id="@+id/nightRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/model_night"/>
    </RadioGroup>
    <CheckBox
        android:id="@+id/poiCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapType"
        android:text="@string/sign_show"/>
    <RelativeLayout
        android:layout_below="@+id/poiCheck"
        android:id="@+id/poiLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_alignParentLeft="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/input_keyword"
            android:text="@string/market"
            android:imeOptions="actionDone"
            android:id="@+id/keywordEdit"/>
        <EditText
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/shanghai"
            android:imeOptions="actionDone"
            android:hint="@string/city"
            android:id="@+id/cityEdit"/>
        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/keywordEdit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextPage"
            android:text="@string/nextPage"
            android:layout_alignParentRight="true"
            android:layout_below="@id/cityEdit"/>
    </RelativeLayout>
</RelativeLayout>
